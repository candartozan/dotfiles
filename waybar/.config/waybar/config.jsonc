{
    "layer": "top",
    "position": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    "margin-left": 10,
    "margin-right": 10,
    "margin-top": 5,
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": ["group/group-power", "group/gcpu", "group/group-fan", "memory", "disk"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [
        "mpris",
        "network",
        "bluetooth",
        "group/audio",
        "power-profiles-daemon",
        "backlight",
        "battery",
        "group/time",
        "tray"
    ],

    // Left Modules
    "group/group-power": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": ["custom/archmenu", "custom/power", "custom/reboot", "custom/quit", "custom/lock"]
    },
    "custom/archmenu": {
        "format": "Û∞£á",
        "tooltip": false
    },
    "custom/quit": {
        "format": " Û∞àÜ ",
        "tooltip": false,
        "on-click": "hyprctl dispatch exit"
    },
    "custom/lock": {
        "format": " ÔÄ£ ",
        "tooltip": false,
        "on-click": "hyprlock"
    },
    "custom/reboot": {
        "format": " Ó´í ",
        "tooltip": false,
        "on-click": "systemctl reboot"
    },
    "custom/power": {
        "format": " ÔÄë ",
        "tooltip": false,
        "on-click": "systemctl poweroff"
    },

    "group/gcpu": {
        "orientation": "horizontal",
        "modules": ["cpu", "temperature#cputemp"],
        "on-click": "kitty htop"
    },
    "cpu": {
        "format": "{avg_frequency}GHz {usage}% Ôãõ ",
        "interval": 10,
        "tooltip": false
    },
    "temperature#cputemp": {
        "hwmon-path": "/sys/class/hwmon/hwmon8/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C",
        "tooltip": false,
        "interval": 10
    },

    "group/group-fan": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": ["group/fan", "custom/power-profile"],
    },
    "group/fan": {
        "orientation": "horizontal",
        "modules": ["custom/cpufan", "custom/midfan", "custom/gpufan"],
        "on-click": "asusctl profile -n"
    },
    "custom/cpufan": {
        "exec": "cat /sys/class/hwmon/hwmon5/fan1_input",
        "interval": 10,
        "format": "{}Û∞àê ",
        "tooltip": false
    },
    "custom/midfan": {
        "exec": "cat /sys/class/hwmon/hwmon5/fan3_input",
        "interval": 10,
        "format": "{}Û∞àê ",
        "tooltip": false
    },
    "custom/gpufan": {
        "exec": "cat /sys/class/hwmon/hwmon5/fan2_input",
        "interval": 10,
        "format": "{}Û∞àê ",
        "tooltip": false
    },
    "custom/power-profile": {
        "exec": "asusctl profile -p | sed -n '2p' | sed s:'Active profile is '::",
        "interval": 10,
        "format": "{}",
        "tooltip": false
    },

    "memory": {
        "format": "{}% ÓøÖ "
    },
    "disk": {
        "interval": 30,
        "format": "{percentage_used}% Û∞ãä"
    },

    // Right Modules
    "mpris": {
        "format": "{player_icon} {title}",
        "format-paused": "{status_icon} {title}",
        "player-icons": {
            "default": "ÔÅå",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "ÔÅã"
        },
        "max-length": 30
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} {icon}",
        "format-ethernet": "{ipaddr}/{cidr} Û∞àÄ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
        "on-click": "kitty nmtui"
    },
    "bluetooth": {
        "format": "Ôäî {status}",
        "format-connected": "Ôäî {device_alias}",
        "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
        "on-click": "blueman-manager"
    },

    "group/audio": {
        "orientation": "horizontal",
        "modules": ["pulseaudio", "pulseaudio#mic"]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click-right": "pavucontrol",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "pulseaudio#mic": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± Muted",
        "on-click-right": "pavucontrol",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "group/time": {
        "orientation": "horizontal",
        "modules": ["clock", "clock#date"]
    },
    "clock": {},
    "clock#date": {
        "format": " {:%d %B %Y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span ><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
